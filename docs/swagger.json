                },
                "name": {
                    "type": "string"
                }
            }
        },
        "dto.PlayerScoreDTO": {
            "type": "object",
            "properties": {
                "game_name": {
                    "type": "string"
                },
                "points": {
                    "type": "integer"
                },
                "username": {
                    "type": "string"
                }
            }
        },
        "dto.ScoreStatisticsDTO": {
            "type": "object",
            "properties": {
                "game_id": {
                    "type": "integer"
                },
                "game_name": {
                    "type": "string"
                },
                "mean": {
                    "type": "number"
                },
                "median": {
                    "type": "number"
                },
                "mode": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        },
        "handler.AuthRequest": {
            "type": "object",
            "required": [
                "password",
                "username"
            ],
            "properties": {
                "password": {
                    "type": "string",
                    "minLength": 6
                },
                "username": {
                    "type": "string"
                }
            }
